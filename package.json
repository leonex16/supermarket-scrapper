{
  "name": "supermarket-scrapper",
  "version": "1.0.0",
  "private": "true",
  "workspaces": [
    "Application",
    "Infrastructure"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.6.0"
  },
  "scripts": {
    "app:dev": "npm run dev --workspace=Application",
    "server:dev": "npm run server --workspace=Application",
    "app:build": "npm run build --workspace=Application",
    "infra:build": "npm run build --workspace=Infrastructure",
    "infra:production": "npm run start --workspace=Infrastructure",
    "app:start": "npm run start --workspace=Application",
    "infra:dev:console": "npm run dev:console --workspace=Infrastructure",
    "server:test": "export NODE_TLS_REJECT_UNAUTHORIZED=0 && LAYERS_TEST_ENV=SERVER jest Application/pages/api/src/__tests__ --detectOpenHandles",
    "app:test": "LAYERS_TEST_ENV=APPLICATION jest Application/src/__tests__ --detectOpenHandles",
    "infra:test": "LAYERS_TEST_ENV=INFRASTRUCTURE jest /Infrastructure",
    "domain:test": "LAYERS_TEST_ENV=DOMAIN jest /Domain",
    "lint": "eslint --color --cache --cache-file .eslintcache --fix 'Application/**/!(node_modules)/*.{js,ts,tsx}' 'Domain/**/!(node_modules)/*.{js,ts,tsx}' 'Infrastructure/**/!(node_modules)/*.{js,ts,tsx}'"
  },
  "author": "Leonel Espinoza Sotelo",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "27.5.1",
    "@types/node": "17.0.34",
    "@typescript-eslint/eslint-plugin": "5.25.0",
    "@typescript-eslint/parser": "5.25.0",
    "eslint": "8.15.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.30.0",
    "eslint-plugin-react-hooks": "4.5.0",
    "eslint-plugin-testing-library": "5.5.0",
    "gitmoji-cli": "5.0.0",
    "jest": "28.1.0",
    "ts-jest": "28.0.2",
    "ts-node-dev": "1.1.8",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.6.4"
  },
  "_moduleAliases": {
    "@Domain": "Domain",
    "@Infrastructure": "Infrastructure"
  }
}
